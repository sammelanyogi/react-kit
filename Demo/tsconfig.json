{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "jsx": "react",
    "types": ["react"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
